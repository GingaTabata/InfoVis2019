      var v0 = new Vec3( x0, y0, z0 );
      var v1 = new Vec3( x1, y1, z1 );
      var v2 = new Vec3( x2, y2, z2 );
      
      var S = v0.areaOfTriangle( v1, v2 ); // (output value)
      
      window.alert("The Area Of The Triangle is" + S);
      }
