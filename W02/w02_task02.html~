    <script>
      
      var x0, y0, z0;
      var x1, y1, z1;
      var x2, y2, z2;
      
      // 数値をを取得する
      function tbox1(){
      
      x0=document.js.num1.value;
      y0=document.js.num2.value;
      z0=document.js.num3.value;
      x1=document.js.num4.value;
